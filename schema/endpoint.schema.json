{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "https://artiga033.github.io/sing-box-schema/endpoint.schema.json",
	"type": "object",
	"allOf": [
		{
			"properties": {
				"type": {
					"type": "string",
					"description": "The type of the endpoint.",
					"enum": ["wireguard", "tailscale"]
				},
				"tag": {
					"type": "string",
					"description": "The tag of the endpoint."
				}
			},
			"required": ["type"]
		},
		{
			"oneOf": [
				{
					"$ref": "./endpoint/wireguard.schema.json"
				},
				{
					"$ref": "./endpoint/tailscale.schema.json"
				}
			]
		}
	]
}
