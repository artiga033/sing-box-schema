{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "https://artiga033.github.io/sing-box-schema/inbound/vless.schema.json",
	"allOf": [
		{
			"properties": {
				"type": {
					"const": "vless"
				},
				"tag": {
					"type": "string",
					"description": "The tag of the inbound."
				},
				"users": {
					"type": "array",
					"items": {
						"type": "object",
						"properties": {
							"name": {
								"type": "string"
							},
							"uuid": {
								"type": "string"
							},
							"flow": {
								"type": "string",
								"enum": ["", "xtls-rprx-vision"],
								"description": "VLESS Sub-protocol."
							}
						},
						"required": ["uuid"]
					},
					"description": "VLESS users."
				},
				"tls": {
					"$ref": "../shared/tls-inbound.schema.json"
				},
				"multiplex": {
					"$ref": "../shared/multiplex-inbound.schema.json"
				},
				"transport": {
					"$ref": "../shared/v2ray-transport.schema.json"
				}
			},
			"required": ["type", "users"]
		},
		{
			"$ref": "../shared/listen.schema.json"
		}
	]
}
