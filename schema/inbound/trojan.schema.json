{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "https://artiga033.github.io/sing-box-schema/inbound/trojan.schema.json",
	"allOf": [
		{
			"properties": {
				"type": {
					"const": "trojan"
				},
				"tag": {
					"type": "string",
					"description": "The tag of the inbound."
				},
				"users": {
					"type": "array",
					"items": {
						"type": "object",
						"properties": {
							"name": {
								"type": "string"
							},
							"password": {
								"type": "string"
							}
						},
						"required": ["password"]
					},
					"description": "Trojan users."
				},
				"tls": {
					"$ref": "../shared/tls-inbound.schema.json"
				},
				"fallback": {
					"type": "object",
					"properties": {
						"server": {
							"type": "string"
						},
						"server_port": {
							"type": "integer"
						}
					},
					"description": "Fallback server configuration."
				},
				"fallback_for_alpn": {
					"type": "object",
					"additionalProperties": {
						"type": "object",
						"properties": {
							"server": {
								"type": "string"
							},
							"server_port": {
								"type": "integer"
							}
						}
					},
					"description": "Fallback server configuration for specified ALPN."
				},
				"multiplex": {
					"$ref": "../shared/multiplex-inbound.schema.json"
				},
				"transport": {
					"$ref": "../shared/v2ray-transport.schema.json"
				}
			},
			"required": ["type", "users"]
		},
		{
			"$ref": "../shared/listen.schema.json"
		}
	]
}
