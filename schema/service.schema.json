{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "allOf": [
        {
            "properties": {
                "type": {
                    "type": "string",
                    "description": "The type of the service.",
                    "enum": ["derp", "resolved", "ssm-api"]
                },
                "tag": {
                    "type": "string",
                    "description": "The tag of the service."
                }
            },
            "required": ["type"]
        },
        {
            "oneOf": [
                { "$ref": "./service/derp.schema.json" },
                { "$ref": "./service/resolved.schema.json" },
                { "$ref": "./service/ssm-api.schema.json" }
            ]
        }
    ]
}
