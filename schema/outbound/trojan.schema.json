{
    "allOf": [
        {
            "properties": {
                "type": {
                    "const": "trojan"
                },
                "tag": {
                    "type": "string",
                    "description": "The tag of the outbound."
                },
                "server": {
                    "type": "string",
                    "description": "The server address."
                },
                "server_port": {
                    "type": "integer",
                    "description": "The server port."
                },
                "password": {
                    "type": "string",
                    "description": "The Trojan password."
                },
                "network": {
                    "type": "string",
                    "enum": ["tcp", "udp"],
                    "description": "Enabled network.\n\nOne of `tcp` `udp`.\n\nBoth is enabled by default."
                },
                "tls": {
                    "$ref": "../shared/tls-outbound.schema.json"
                },
                "multiplex": {
                    "$ref": "../shared/multiplex-outbound.schema.json"
                },
                "transport": {
                    "$ref": "../shared/v2ray-transport.schema.json"
                }
            },
            "required": ["type", "server", "server_port", "password"]
        },
        {
            "$ref": "../shared/dial.schema.json"
        }
    ]
